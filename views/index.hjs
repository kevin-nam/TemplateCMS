  <script>
  	$(document).ready(function(){
  		console.log('ready');


  		$('.barlink').on('click',function(e){
  			
  			e.preventDefault();
  			var target = $(this).get(0).id;

  			if(target == '1'){
  				target = '#first';
  			} else if (target == '2'){
  				target = '#second';
  			} else if (target == '3'){
  				target = '#third';
  			} else if (target == '4'){
  				target = '#fourth';
  			} else if (target == '5'){
  				target = '#fifth';
  			}

  			$('html, body').stop().animate({
  					scrollTop : $(target).offset().top - 20
  					}, 1000);
  		});

  	});


  </script>


